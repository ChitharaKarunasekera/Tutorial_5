<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <ScrollPane prefHeight="400.0" prefWidth="380.0">
         <content>
            <MenuBar prefHeight="26.0" prefWidth="384.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save as" />
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Open" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <MenuItem mnemonicParsing="false" text="Find" />
                        <MenuItem mnemonicParsing="false" text="Replace" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Windows" />
                        <Menu mnemonicParsing="false" text="Views">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Reading Mode" />
                              <MenuItem mnemonicParsing="false" text="Presentation Mode" />
                              <MenuItem mnemonicParsing="false" text="Normal Mode" />
                              <MenuItem mnemonicParsing="false" text="Web Mode" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Zoom">
                           <items>
                              <MenuItem mnemonicParsing="false" text="Zoom In" />
                              <MenuItem mnemonicParsing="false" text="Zoom Out" />
                           </items>
                        </Menu>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </content>
      </ScrollPane>
   </children>
</GridPane>
